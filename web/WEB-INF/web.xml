<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletFilmes</servlet-name>
        <servlet-class>br.com.bean.ServletFilmes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDeletar</servlet-name>
        <servlet-class>br.com.bean.ServletDeletar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAlterar</servlet-name>
        <servlet-class>br.com.bean.ServletAlterar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEditar</servlet-name>
        <servlet-class>br.com.bean.ServletEditar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletFilmes</servlet-name>
        <url-pattern>/Filmes.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDeletar</servlet-name>
        <url-pattern>/ServletDeletar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAlterar</servlet-name>
        <url-pattern>/ServletAlterar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditar</servlet-name>
        <url-pattern>/ServletEditar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
